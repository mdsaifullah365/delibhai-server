{
  "extends": ["prettier", "airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "env": {
    "commonjs": true,
    "node": true
  },
  "rules": {
    "no-return-await": 0,
    "implicit-arrow-linebreak": 0,
    "no-console": 0,
    "no-underscore-dangle": 0,
    "consistent-return": 0,
    "indent": 0,
    "linebreak-style": 0,
    "func-names": 0,
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "printWidth": 100,
        "tabWidth": 4,
        "semi": true
      }
    ]
  },
  "plugins": ["prettier"]
}
